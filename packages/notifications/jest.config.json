{
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "roots": ["<rootDir>/src"],
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "testMatch": ["**/?(*.)+(spec|test|unit|integration|acceptance).[jt]s?(x)"],
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "testEnvironment": "node",
  "coverageReporters": ["html", "text", "text-summary", "cobertura"]
}
